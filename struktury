//użycie pola typu string w strukturze

#include <iostream>
#include <string>
struct inflatable //deklaracja struktury
{
    std::string name;
    float volume;
    double price;
};

int main()
{
    using namespace std;
    inflatable guest =
    {
        "glorious", //wartosc pola name
        1.88,
        29.99
    };

    inflatable pal =
    {
        "arthur",
        3.12,
        1.99
    };

cout<<"Zaproszono: " << pal.name << " oraz " << guest.name;
}


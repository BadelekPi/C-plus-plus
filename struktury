#include <iostream>

struct inflatable //deklaracja struktury
{
    char name[20];
    float volume;
    double price;
};

int main()
{
    using namespace std;
    inflatable guest =
    {
        "Glorious Gloria", //wartosc pola name
        1.88,
        29.99
    };

    inflatable pal =
    {
        "Audacious Arthur",
        3.12,
        1.99
    };

cout<<"Zaproszono: " << pal.name << " oraz " << guest.name;
}


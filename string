//petla porownujaca dwa Å‚ancuchy obiektu string
#include <iostream>
#include <string>
using namespace std;

int main()
{
   string word = "?ate";

   for (char ch='a'; word != "mate"; ch++)
   {
       cout<<word<<endl;
       word[0] = ch;
   }
   cout << "Petla sie skonczyla, slowo to: " << word << endl;
   return 0;
}

============================================================================================================================================================================

//petla for szukajaca odpowiadajacej litery do slowa
#include <iostream>
#include <cstring>
using namespace std;

int main()
{
   char word[5] = "?ate";

   for (char ch='a'; strcmp(word, "mate"); ch++)
   {
       cout<<word<<endl;
       word[0] = ch;
   }
   cout << "Petla sie skonczyla, slowo to: " << word << endl;
   return 0;
}

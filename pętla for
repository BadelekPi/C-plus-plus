//petla for wyswietlająca znaki od konca
#include <iostream>
#include <string>
using namespace std;
int main()
{
   cout<<"Podaj slowo";
   string word;
   cin>>word;

   //wyswietlanie liter od konca
   for (int i = word.size() - 1; i>= 0; i--)
   {
       cout << word[i];
   }
}
}
